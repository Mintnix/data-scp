    List = [("Linux auswählen"), ("Linux Mint 21 - Cinnamon"), ("Linux Mint 21 - Mate"), ("Linux Mint 21 - Xfce"), ("Ubuntu 22.04"), ("Kubuntu 22.04"), ("eigene Einstellung")]
