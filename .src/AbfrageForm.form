# Gambas Form File 3.0

{ Form Form
  MoveScaled(0,0,37,56)
  Background = &HDFFFFF&
  ToolTip = ("Client oder Server oder beides? \n\nDamit das Programm richtig funktioniert gibt es mindestens einen Server in Ihrem Netzwerk. Von diesem können Clienten Daten herunterladen oder hochladen. Will man vom jeweils anderen Rechner die selbige Funktion, so ist der openssh Server zu installieren, falls nicht schon vorinstalliert.\nMerke: Der Rechner an dem ich gerade sitze ist der Client. Der entfernte Rechner ist der Server.")
  Resizable = False
  Border = False
  { Panel1 Panel
    MoveScaled(1,7,35,26)
  }
  { Label1 Label
    MoveScaled(2,34,33,10)
    ToolTip = ("Bei geänderten Einstellungen\ndas Speichern nicht vergessen.")
