    Text = ("Der Ordner für den \nDatenaustausch wird \nautomatisch beim Speichern \nim Home-Verzeichnis erstellt.")
  }
  { ComboBox1 ComboBox
    MoveScaled(2,8,33,4)
    ToolTip = ("Linux Distribution vorher richtig einstellen.\nWelches Linux wird hier gerade benutzt?\n\nFür individuelle Einstellungen wählen Sie \"eigene Einstellung\" aus der Liste aus.\nAnschließend klicken Sie mit der rechten \nMaustaste doppelt auf \"eigene Einstellung\". ")
    ReadOnly = True
    List = [("Linux auswählen"), ("Linux Mint - Cinnamon"), ("Linux Mint - Mate"), ("Linux Mint - Xfce"), ("Ubuntu"), ("Kubuntu"), ("eigene Einstellung")]
    Border = False
  }
  { TextBox1 TextBox
    MoveScaled(2,13,33,4)
    ToolTip = ("IP des entfernten Rechner eingeben.")
    Text = ("Server IP-Adresse ?")
